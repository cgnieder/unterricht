% \punkt*(x,y) or \punkt*(x,y,z)
% \punkt{A}(x,y) or \punkt{A}(x,y,z)
\newcommand*\punkt{\@ifstar{\mthhlf@punkt}{\mthhlf@punkt@nostar}}
\newcommand*\mthhlf@punkt@nostar[1]{#1\mthhlf@punkt}
\newcommand*\mthhlf@punkt{}
\def\mthhlf@punkt(#1){\mthhlf@punkt@aux#1,,\q@stop}
\def\mthhlf@punkt@aux#1,#2,#3,#4\q@stop{%
  \ifblank{#3}
    {\mthhlf@punkt@RR{#1}{#2}}
    {\mthhlf@punkt@RRR{#1}{#2}{#3}}%
}
\newcommand*\mthhlf@punkt@RR[2]{(\,#1\mid#2\,)}
\newcommand*\mthhlf@punkt@RRR[3]{(\,#1\mid#2\mid#3\,)}

